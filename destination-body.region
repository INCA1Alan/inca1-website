<article class="destination">
    {.section collection}
        <header class="destination__header content-fill">
            {.section mainImage}
                <img {@|image-meta}>
            {.end}
            {description}
        </header>
    {.end}
    <main id="content" class="content" role="main" data-content-field="main-content">
        {squarespace.main-content}
    </main>
</article>

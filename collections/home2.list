{.repeated section items}
    {.equal? title "Intro"}

        <section class="intro nection nection--{title|slugify} {@|item-classes}">
            <video autoplay loop class="intro__video">
                <source src="http://playgroundinc.com/inca2.mp4" type="video/mp4">
            </video>
            <div class="intro__content">
                {body}
            </div>
        </section>

    {.or}

        <section class="nection nection--{title|slugify} {@|item-classes}" style="background-image: url({assetUrl})">
            {body}
        </section>

    {.end}
{.or}
    <p>No nections to display.</p>
{.end}


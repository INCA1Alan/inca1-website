<section class="destination-grid">
{.repeated section items}
    <article class="destination-item destination-item--{title|slugify} {@|item-classes}" style="background-image: url({assetUrl})">
        <a href="{sourceUrl}">
            <div class="destination-item__desc">
                <h1 class="destination-item__title">{title}</h1>
                {body}
            </div>
            {.excerpt?}
            <aside class="destination-item__meta">
                {excerpt}
            </aside>
            {.end}
        </div>
        </a>
    </article>
{.or}
    <p>No trips yet.</p>
{.end}
</section>

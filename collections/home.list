{.repeated section items}
<section class="section section--{title|slugify} {@|item-classes}" style="background-image: url({assetUrl})">
    <div class="section__layout">
        <h1 class="section__title">{title}</h1>
        {body}
        {.excerpt?}
        <div class="section__table">
            {excerpt}
        </div>
        {.end}
    </div>
</section>
{.or}
    <p>No sections to display.</p>
{.end}
